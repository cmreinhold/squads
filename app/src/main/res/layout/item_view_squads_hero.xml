<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/nine_grid_units">

    <ImageView
        android:id="@+id/heroIcon"
        android:layout_width="@dimen/nine_grid_units"
        android:layout_height="@dimen/nine_grid_units"
        android:background="@drawable/ic_surface"
        android:contentDescription="@null"
        android:outlineProvider="background"
        android:padding="@dimen/one_grid_unit"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_logo_plum"
        app:divider="@drawable/bg_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/heroTitle"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/heroTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:minLines="2"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/heroIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="A-Bomb (HAS) this is a very long text that needs to be cutwhen it reaches more than two lines of length" />

</androidx.constraintlayout.widget.ConstraintLayout>
